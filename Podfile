# Uncomment the next line to define a global platform for your project
 platform :ios, '9.0'

target 'UizaSDK' do
  platform :ios, '9.0'
  use_frameworks!

  pod 'Alamofire'
  pod 'GoogleAds-IMA-iOS-SDK'
  pod 'google-cast-sdk'
  pod 'FrameLayoutKit'
  pod 'NKModalViewManager'
  pod 'NKButton'
  pod 'NVActivityIndicatorView'
  pod 'SDWebImage'
  pod 'SwiftyJSON'
  pod 'LFLiveKit'
  pod 'TweenKit'

end

