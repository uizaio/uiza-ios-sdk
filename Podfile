# Uncomment the next line to define a global platform for your project
 platform :ios, '9.0'

target 'UizaSDK' do
  platform :ios, '9.0'
  use_frameworks!

  pod 'Alamofire'
  pod 'GoogleAds-IMA-iOS-SDK'
  pod 'google-cast-sdk'
  pod 'FrameLayoutKit'
  pod 'NKModalViewManager'
  pod 'NKButton'
	pod 'NVActivityIndicatorView/AppExtension', '~> 4.6.1'
  pod 'SDWebImage'
  pod 'SwiftyJSON', '~> 4.2.0'
  pod 'LFLiveKit+'
  pod 'TweenKit'

end

